<% content_for(:meta_title) {"ideas"} %>

<ul id="submenu">
  <li><%= link_to "Recetas", ideas_url(category: 'recetas'), :class => submenu_class('recetas') %></li>
  <li><%= link_to "Trucos", ideas_url(category: 'trucos'), :class => submenu_class('trucos') %></li>
</ul>

    <div id="listado" class="row col-md-12">
    <% @ideas.each do |idea| %>

      <div class="col-md-4 col-sm-6 col-xs-12">
        <%= link_to image_tag(idea.image.url(:medium), :alt => " ", :class => "img-responsive"), idea_url(idea) %>
        <%#= image_tag idea.image.url(:medium), :alt => " ", :class => "img-responsive" %>
        <h3 class="veinticinco"><%= link_to idea.title, idea_url(idea) %></h3>
        <div><%= idea.published_at.strftime("%d/%m/%Y") %>
        <span> | Por: <%= link_to idea.user, profile_path(idea.user) %></span></div>
        <div class="cuerpo">
         <%= link_to truncate_html(markdown(idea.introduction).html_safe, length: 200, omission: ' ... '), idea_url(idea) %>
        </div>
      </div><!--/col-md-4-->

    <% end %>
   </div><!-- /listado -->
<%= paginate(@ideas) %>


<div id="subereceta" class="row">
  <span class="btn btn-rojo"><%= link_to 'Sube tu receta', new_my_idea_path %></span> (Para subir una receta es necesario estar registrado)
  <span class="registrate"><%= link_to t('nlt.new_user'), new_user_registration_path, "data-no-turbolink" => true %></span>
</div><!-- /subereceta -->
