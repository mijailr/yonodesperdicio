<% content_for(:meta_title) {"noticias"} %>


<div class="col-md-10">

    <% @noticias.each do |noticia| %>
    <div id="listado" class="row">
      <div class="col-md-4">
        <%= image_tag noticia.image.url(:medium), :alt => "", :class => "img-responsive" %>  
      </div>
      <div class="col-md-8">
          <h3 class="veinticinco"><%= link_to noticia.title, noticia_url(noticia) %></h3>
          <p><%= noticia.published_at.strftime("%d/%m/%Y") %></p>
          <p><%= truncate_html(markdown(noticia.body).html_safe, length: 340, omission: ' +...') %></p>
          <!--<span><%= link_to "  Leer mÃ¡s", noticia_url(noticia) %></span>-->
          <!--<p><%= link_to noticia.category, '#' %> + (tags con link a las tags)</p>-->
      </div>
    </div><!-- /listado -->
    <% end %>

<%= paginate(@noticias) %>

</div><!-- /col-md-10 -->

<div class="col-md-2">
  <% cache do %>
    <%= render :partial => "partials/sidebar_right", :locals => { :url => "http://yonodesperdicio.org" } %>
  <% end %>
</div><!-- /col-md-2-->

