<% content_for(:meta_title) {"noticias"} %>


<div class="col-md-10 col-sm-10">

    <% @noticias.each do |noticia| %>
    <div id="listado" class="row">
      <div class="col-md-4">
        <%= link_to image_tag(noticia.image.url(:medium), :alt => " ", :class => "img-responsive"), noticia_url(noticia) %>
        <%#= image_tag noticia.image.url(:medium), :alt => "", :class => "img-responsive" %>  
      </div>
      <div class="col-md-8">
          <h3 class="veinticinco"><%= link_to noticia.title, noticia_url(noticia) %></h3>
          <p><%= noticia.published_at.strftime("%d/%m/%Y") %></p>
          <p><%= truncate_html(markdown(noticia.body).html_safe, length: 340) %><span><%= link_to "+ ...", noticia_url(noticia) %></span></p>
          <%#= truncate_html(markdown(noticia.body).html_safe, length: 340, omission: ' +...') %>
          <!--<p><%= link_to noticia.category, '#' %> + (tags con link a las tags)</p>-->
      </div>
    </div><!-- /listado -->
    <% end %>

<%= paginate(@noticias) %>

</div><!-- /col-md-10 -->

<div id="sidebar-right" class="col-md-2 col-sm-2">
  <% cache do %>
    <%= render :partial => "partials/sidebar_right", :locals => { :url => "http://yonodesperdicio.org" } %>
  <% end %>
</div><!-- /sidebar-right -->


