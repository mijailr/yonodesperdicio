<% content_for(:meta_title) {"particulares"} %>

<h1 class="titulorojo">Entre particulares</h1>

<div class="row">
  <div id="introduccion" class="col-md-8">
    <p>En esta página podrás ver los alimentos que los particulares ofrezcan. </p>
  </div><!-- col -->
</div><!-- /row -->

    <%#= link_to t('nlt.view_more_ads'), ads_listall_path(type: :give, page: 2) %>

  <% @alimentos.each_slice(4) do |alimentos| %>
  <div id="gridalimentos" class="row">

    <% alimentos.each do |alimento| %>

      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="alimento">
          <%= link_to image_tag(alimento.image.url(:thumb), :alt => " ", :class => "img-responsive"), ad_url(alimento) %>
        <% if alimento.is_give? %>
          <span class="ad_status <%= alimento.status_class %>"><%= alimento.status_string %></span>
        <% end %>

          <h3 class="veinticinco"><%= link_to alimento.title, ad_url(alimento) %></h3>
          <p class="cantidad"><%= grams_to_kg(alimento.grams) %> kg</p>
          <p>Código postal: <%= alimento.user.zipcode %></p>
          <p>Fecha límite de entrega: <%= formated_date(alimento.pick_up_date) %></p>
          <p>Fecha de caducidad: <%= formated_date(alimento.expiration_date) %></p>
          <hr>
          <div id="usuario">
            <p><b><%= link_to alimento.user.username, profile_path(alimento.user.username) %></b></p>
            <p>Total comida entregada: <span id="comidaentregada"><%= grams_to_kg(alimento.user.total_quantity) %> kg</span></p>
              <% if can? :update, alimento %>
                <%= link_to ads_edit_path(alimento.id) do %>
                <div class="submit"><%= t('nlt.edit_this_ad') %></div>
              <% end %>
    <% end %>
          </div>
        </div><!--/alimento-->
      </div><!--/col-md-3-->
    <% end %>

</div><!--/gridalimentos-->
  <% end %>


<%= paginate(@alimentos) %>

<div id="subereceta" class="row col-md-12 col-sm-12 col-xs-12">
  <div class="col-md-10 col-sm-10 col-xs-10">
    <span class="btn btn-rojo"><%= link_to 'Comparte alimentos', new_ad_path %></span>
    <span class="enrojo">  (Para compartir alimentos es necesario iniciar sesión)</span>
  </div>
  <div class="login col-md-2 col-sm-2 col-xs-2">
    <%= link_to t('nlt.login'), new_user_session_path, "data-no-turbolink" => true %>
  </div>

</div><!-- /subereceta -->
