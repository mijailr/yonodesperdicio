<% content_for(:meta_title) {@noticia.title} %>

<div class="row">
  <div id="imagen" class="col-md-6">
    <%= image_tag @noticia.image.url(:large), :alt => "", :class => "img-responsive" %>    
    <p><%= @noticia.category %></p>
    <p>
      <% cache do %>
        <%= render :partial => "partials/social_buttons", :locals => { :url => noticia_url(@noticia), :meta_title => @noticia.title } %>
      <% end %>
    </p>
  </div><!-- /imagen -->

  <div id="cuerpo" class="col-md-6">

    <h3><%= @noticia.title %></h3>
    <p><%= @noticia.published_at.strftime("%d/%m/%Y") %></p>
    <p><%#= @noticia.id %></p>
    <p><%= @noticia.body.html_safe %></p>
    <p><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> <%= link_to 'VOLVER' , '/noticias' %></p>
    <i class="fa fa-arrow-left"></i>


    <p>COMENTAR (Para dejar un comentario es necesario estar registrado)...
    <span class="btn btn-default"><%= link_to t('nlt.new_user'), new_user_registration_path, "data-no-turbolink" => true %></span></p>
    <p>[LISTADO DE COMENTARIOS]</p>
 
  </div><!-- /cuerpo -->
</div><!-- /row -->
