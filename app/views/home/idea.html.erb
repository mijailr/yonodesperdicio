
<% content_for(:meta_title) {@idea.title} %>
<div class="row">
  <div id="imagen" class="col-md-4">
    <%= image_tag @idea.image.url(:large), :alt => " ", :class => "img-responsive" %>  
    <p><%= @idea.category %></p>
    <p>
      <% cache do %>
        <%= render :partial => "partials/social_buttons", :locals => { :url => idea_url(@idea) } %>
      <% end %>
    </p>
  </div><!-- /imagen -->

  <div id="cuerpo" class="col-md-8">

    <h3><%= @idea.title %></h3>
    <p><%= @idea.published_at.strftime("%d/%m/%Y") %></p>
    <p><%#= @idea.id %></p>
    <p><%= @idea.body.html_safe %></p>
    <p><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> <%= link_to 'VOLVER' , '/ideas' %></p>

    <p>COMENTAR (Para dejar un comentario es necesario estar registrado)...
    <span class="btn btn-default"><%= link_to t('nlt.new_user'), new_user_registration_path, "data-no-turbolink" => true %></span></p>
    <p>[LISTADO DE COMENTARIOS]</p>
 
  </div><!-- /cuerpo -->
</div><!-- /row -->
