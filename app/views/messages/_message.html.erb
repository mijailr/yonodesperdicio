<% if message.sender == message.conversation.messages.first.sender %>
  <div class="message-excerpt">
    <div class="message-from-left">
      <%= link_to profile_path message.sender do %>
        <%#= image_tag "contact.png" %>
        <%= image_tag message.sender.image.url(:thumb), :alt => "", :class => "img-responsive, avatar" %>

        <%= message.sender.username %>
      <% end %>
    </div>
    <div class="message-container-right">
      <div class="triangle-me">
      </div>
      <div class="bubble bg-bubble-me">
        <%= message.body %>
        <div class="message-date"> 
          <abbr class="js-moment" title="<%= message.created_at %>"><%= message.created_at %></abbr>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="message-excerpt">
    <div class="message-from-right">
      <%= link_to profile_path message.sender do %>
        <%#= image_tag "contact.png" %>

        <%= image_tag message.sender.image.url(:thumb), :alt => "", :class => "img-responsive, avatar" %>

        <%= message.sender.username %>
      <% end %>
    </div>
    <div class="message-container-left">
      <div class="triangle-other">
      </div>
      <div class="bubble bg-bubble-other">
        <%= message.body %>
        <div class="message-date">
          <abbr class="js-moment" title="<%= message.created_at %>"><%= message.created_at %></abbr>
        </div>
      </div>
    </div>
  </div>
<% end %>
