<div id="social-buttons">

  <span id="twitter-button">
    <a class="twitter-share-button"  href="https://twitter.com/intent/tweet?url=<%= url %>&text=<%= meta_title %>" target="_blank"><i class="fa fa-twitter"></i></a>
  </span>

  <span id="facebook-button">
    <a href="https://www.facebook.com/sharer.php?u=<%= url %>" title="<%= meta_title %>" target="_blank" data-via="yonodesperdicio" data-layout="button_count"><i class="fa fa-facebook"></i></a>
  </span>

  <span id="google-button">
    <a href="https://plus.google.com/share?url={<%= url %>}" title="Compártelo en G+!" alt="Compártelo en G+!" data-via="yonodesperdicio" onclick="javascript:window.open(this.href,
  '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"><i class="fa fa-google-plus"></i></a>
  </span>

</div>
