
<%= form_for(@idea, url: form_url) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Idea::CATEGORIES %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true, maxlenght: 100 %>
    <%= t "(Entre 5 y 100 caracteres)" %>

  </div>
  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction, maxlenght: 200 %>
    <%= t "(Entre 10 y 200 caracteres)" %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, maxlenght: 500, :rows => 10 %>
    <%= t "(Entre 30 y 500 caracteres)" %>
  </div>

  <div><%= f.label :image %> <i>(Imagen)</i><br />
    <% if @idea.image.presence %>
      La imagen actual: <%= image_tag @idea.image.url(:thumb), :alt => "", :class => "avatar, img-responsive" %>
    <% end %>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>