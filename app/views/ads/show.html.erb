<%= content_for(:meta_title, "#{I18n.t('nlt.keywords')} #{@ad.title} #{@ad.woeid_name}") %>
<%= content_for :meta_description do %>
  <meta name="description" content="<%= t('nlt.meta_description_ad', title: @ad.title, woeid: @ad.woeid_name, body: @ad.body) %>" />
<% end %>


<div class="row fondoblanco">
  <div class="col-md-4 col-sm-4 col-xs-12">
    <% if @ad.image.exists? %>
      <%= link_to image_tag(@ad.image.url(:mediumad), :alt => @ad.title, :class => "img-responsive"), @ad.image.url, :rel => 'superbox[image]', :alt => t('nlt.click_to_large') %>
    <% end %>
  </div><!--/col-->

  <div class="col-md-4 col-sm-4 col-xs-12">
    <h3 class="enrojo"><%= @ad.title %></h3>
    <p>Cantidad: <%= grams_to_kg(@ad.grams) %> kg</p>
    <p>Fecha límite de entrega: <%= formated_date(@ad.pick_up_date) %></p>
    <p>Fecha de caducidad: <%= formated_date(@ad.expiration_date) %></p>
    <p><%= @ad.body %></p>
  </div><!--/col-->

  <div class="col-md-4 col-sm-4 col-xs-12">
    <%#= image_tag "http://maps.google.com/maps/api/staticmap?size=500x100&sensor=false&zoom=13&markers=#{@ad.user.zipcode},#{@ad.user.city}", :width => "100%", :alt => "Mapa'", :id => "mapa", :class => "img-responsive" %>
      <iframe width="100%" height="100" frameborder="0" style="border:0" 
       src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCZtag48hMPyRv9K0xppoqTstZmJ9DHS_Q
       &q=<%= @ad.user.zipcode %>,<%= @ad.user.city %>&zoom=10" allowfullscreen>
       </iframe>
    <div class="izda col-md-4">
      <%= link_to image_tag(@ad.user.image.url(:thumb), :alt => @ad.user.username), @ad.user.image.url, :rel => 'superbox[image]', :alt => t('nlt.click_to_large'), :class => "avatar, img-responsive" %>
    </div><!--/izda--> 

    <div class="dcha col-md-8">
      <p>Código postal: <%= @ad.user.zipcode %></p>
      <p><%= link_to @ad.user, profile_path(@ad.user.username) %></p>
      <p>Comida entregada: <span id="comidaentregada"><%= grams_to_kg(@ad.user.total_quantity) %> kg</span></p>
      <!--<p>[Estrellitas]</p>-->
    </div><!-- /dcha -->

    <% unless current_user == @ad.user %>
      <%= link_to message_new_path @ad.user.id, :class => "world_link" do %>
        <div class="submit"><%= "Contacta con " %> <%= @ad.user.username %></div>
      <% end %>
    <% end %>

    <% if can? :update, @ad %>
        <%= link_to ads_edit_path(@ad.id) do %>
          <div class="submit"><%= t('nlt.edit_this_ad') %></div>
        <% end %>
    <% end %>

  </div><!--/col-->
  
  <div class="meta_info col-md-12 col-sm-12 col-xs-12">
    <% if @ad.is_give? %>
      <span class="ad_status <%= @ad.status_class %>"><%= @ad.status_string %></span>
    <% end %>
    <span><%= t('nlt.readed_count', count: @ad.readed_counter) %><%= t('nlt.comments_count', count: @ad.comments_count) %></span>
    <span><%= t('nlt.share_this_ad') %></span>
        <span><%= render :partial => "partials/social_buttons",
                   :locals => {
                     :url => ad_url(@ad),
                     :meta_title => "#{I18n.t('nlt.keywords')} #{@ad.title} #{@ad.woeid_name}",
                     :meta_description => t('nlt.meta_description_ad', title: @ad.title, woeid: @ad.woeid_name, body: @ad.body),
                     :text => @ad.title
                     }
        %></span>
  </div><!--/meta_info-->

</div><!--fondoblanco-->  

<div class="col-md-12 col-sm-12 col-xs-12">
<div class="user_login_box"><%= render :partial => "partials/user_actions" %>  </div>
  <%= render :partial => "comments/show", :locals => {:ad => @ad} %>
</div>

<h3><%= @ad.user.username %> también comparte:</h3>
  <table id="listados" class="table table-responsive">
    <tr>
      <% if @ad.user.ads.count > 0 %>  
        <% @ad.user.ads.each do |anuncio| %>
          <td><%= link_to anuncio.title, ad_url(anuncio) %></td>
        <% end %>
      <% else %>  
        <p> <%= t("nlt.no_results.on_user") %> </p>
      <% end %>      
    </tr>
  </table>


<hr>

<% content_for :action do %>
  <div class="ad_create_tab">
    <%#= link_to "+ #{ t('nlt.publish_ad_on', woeid: @ad.woeid_name_short) }", new_ad_path(type: @ad.type) %>
  </div>
<% end %>
