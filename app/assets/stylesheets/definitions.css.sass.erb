/** Definiciones **/

@font-face
  font-family: 'Schuss'
  src: asset-url('SchussHandITC_Bold.ttf')  format('truetype')
  font-weight: normal
@font-face
  font-family: 'OpenSans-Regular'
  src: asset-url('OpenSans-Regular.ttf') format('truetype')
  font-weight: 400
@font-face
  font-family: 'OpenSans-Semibold'  
  src: asset-url('OpenSans-Semibold.ttf') format('truetype')
  font-weight: 600
@font-face
  font-family: 'FontAwesome'
  src: asset-url('FontAwesome.otf')
  font-weight: normal

$font-general: 'OpenSans-Regular', sans-serif
$font-gorda: 'OpenSans-Semibold', sans-serif
$font-titulo: 'Schuss'
$c-texto: #012b5a
$c-azul: #005cb8
$c-verde: #6abf4a
$c-rojo: #e55333
$c-fondo: #dedddc
$b-rayas: 2.5px dashed #FFF

@mixin titulos
  font-family: $font-titulo
  font-size: 3em
  color: $c-verde
  margin-bottom: 0
@mixin titulos-home
  font-family: $font-titulo
  font-size: 40px
  clear: both
  margin: 0
  -ms-transform: skewX(40deg) /* IE 9 */
  -webkit-transform: skewX(20deg) /* Safari */
  -moz-transform: skewX(20deg)
  transform: skewX(20deg)
  a
    color: $c-azul
@mixin titulosotros
  font-family: $font-gorda
  color: $c-rojo
  margin-bottom: 0.3em

@mixin titulosfondoazul
  font-family: $font-gorda
  background: $c-azul
  color: #FFF
  text-transform: uppercase
  padding: 2px 5px
  margin: 0 0 0.5em 0

@mixin titulosrojos
  font-family: $font-general
  background: $c-rojo
  color: #FFF
  text-transform: uppercase
  font-size: 1.2em
  padding: 5px 5px
  font-weight: semibold
  margin: 0 15px 1em 15px  
@mixin rayas
  border-top: $b-rayas
  border-bottom: $b-rayas
@mixin texto-rojo
  color: $c-rojo
  font-family: $font-gorda
  line-height: 22px
@mixin introducciones
  font-family: $font-gorda
  font-size: 15px

@mixin avatares
  margin: 5px
  padding: 0
  -webkit-border-radius: 15px
  -moz-border-radius: 15px
  border-radius: 15px

@mixin btn-rojo
  font-weight: bold
  text-transform: uppercase
  margin: 1em 0
  width: 100%
  border: 1px solid #FFF
  background: $c-rojo
  color: #FFF
  a
    color: #FFF
@mixin btn-rojo-hover
  background: #FFF
  border: 1px solid $c-rojo
  color: $c-rojo
  a
    color: $c-rojo

$break-small: 320px
$break-medium: 800px
$break-large: 1200px

    
