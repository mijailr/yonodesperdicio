  background: $c-fondo
  font-family: $font-general
  font-size: 13px
  line-height: 1.3em
  @media all and (max-width: $break-medium)
    p
      font-size: 0.8em
  @media all and (min-width: $break-large)
    max-width: 1180px
    margin: 0 auto     

html img
  vertical-align: middle
  z-index: 360
  padding-bottom: 10px

.img-responsive
  display: inline

.row
  margin: 0px
a
  color: $c-azul
  &:link
    text-decoration: none
  &:visited
    color: $c-azul
  &.active
    color: $c-rojo
  &:hover
    opacity: 0.5
  &.actual
    border-bottom: solid
    border-width: 3px

h1#title
  @include titulosotros
h1.title
  @include titulos
  font-size: 4em
  margin-bottom: 0.5em
h1.titulorojo
